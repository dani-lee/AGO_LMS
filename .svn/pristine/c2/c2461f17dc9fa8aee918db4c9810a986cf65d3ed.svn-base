<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<head></head>
<title>관리자 비밀번호 찾기</title>
<body>
<div class="col-md-5" style="max-width:450px;min-width:450px;">
		<div class="card">
			<div class="card-header" style="background-color:#6c757d;">
				<div class="card-title" style="color:white">관리자 비밀번호찾기</div>
			</div>
			<div class="card-body">
				<div class="form-group">
					<label for="squareInput">관리자 아이디</label>
					<div class="row" style="margin-left:0px;">
					<input type="text" class="form-control input-square" name="manager_id" style="width:305px;">
					<button class="btn btn-default btn-sm" onclick ="manager_id_check">확인</button>
					</div>
				</div>
				<div class="form-group">
					<label for="squareInput">이메일</label>
					<div class="row" style="margin-left:0px;">
					<input type="text" class="form-control input-square" name="manager_email" style="width:305px;" disabled="disabled">
					<button class="btn btn-default btn-sm">확인</button>
					</div>
				</div>
				
				
			</div>
			<hr>
			<div class="row" style = "margin-left:20px; margin-right:20px;margin-bottom:20px;">
				<div>
				<button class="btn btn-primary" onclick = "searchForId();">비밀번호 찾기</button>
				</div>
				<div class="ml-auto">
				<button class="btn btn-default" onclick="WindowClose();">취소</button>
				</div>
			</div>
		</div>
	</div>
	
	
<script>
 function send_email(){
	 alert("해당 이메일로 비밀번호를 발송했습니다.");
 }		
	
</script>
</body>
